{
    "name": "optilyz-test",
    "author": "Muhammad Akbar",
    "description": "Optilyz assessment test",
    "version": "1.0.0",
    "license": "ISC",
    "main": "dist/index.js",
    "scripts": {
        "clean": "rimraf dist/*",
        "tsc": "tsc",
        "build": "npm-run-all clean tsc",
        "prestart": "npm run build",
        "dev:start": "npm-run-all start",
        "dev": "cross-env NODE_ENV=development nodemon --watch src -e ts,ejs --exec npm run dev:start",
        "start": "node .",
        "test": "cross-env NODE_ENV=test jest",
        "testwatch": "jest --watchAll",
        "lint": "eslint . && tslint -c tslint.json -p tsconfig.json",
        "lint:fix": "eslint . --fix && tslint -c tslint.json -p tsconfig.json --fix",
        "precommit-msg": "echo 'Running pre-commit lint...' && exit 0"
    },
    "dependencies": {
        "@automapper/classes": "^7.2.1",
        "@automapper/core": "^7.2.1",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.1",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.2",
        "express-validator": "^6.14.0",
        "helmet": "^5.0.2",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.1.8",
        "parse-duration": "^1.0.2",
        "passport": "^0.5.2",
        "passport-jwt": "^4.0.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^16.11.7",
        "@types/passport": "^1.0.7",
        "@types/passport-jwt": "^3.0.6",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.7.0",
        "eslint-plugin-jest": "^26.0.0",
        "jest": "^27.4.7",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "supertest": "^6.2.2",
        "ts-jest": "^27.1.3",
        "tslint": "^6.1.3",
        "typescript": "^4.5.5"
    },
    "pre-commit": [
        "precommit-msg",
        "lint"
    ]
}
